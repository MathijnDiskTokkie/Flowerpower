

<div class="navbar navbar-light">

    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="navbar-header pull-left">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/Images/logoo.png" alt="Site Logo" id="site-logo" class="img-responsive" />
            </a>
        </div>


        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (ViewContext.HttpContext.User.IsInRole("Manager"))
                {
                    <li>@Html.ActionLink("Boeketten", "index", "Boeketten")</li>
                    <li>@Html.ActionLink("Winkels", "index", "Winkels")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Roles", "index", "Roles")</li>
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                }
                else if (ViewContext.HttpContext.User.IsInRole("Manager") || ViewContext.HttpContext.User.IsInRole("Medewerker"))
                {
                    <li>@Html.ActionLink("Bestellingen", "index", "Bestellings")</li>

                }
                else
                {
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                }

            </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>






