@model Flowerpower.Models.bestelling

@{
    ViewBag.Title = "Winkel en datum kiezen";
}

<h2>Winkel en datum kiezen</h2>

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-6">
                <div>
                    <h4 style="color: black">Wanneer wilt u uw boeket ophalen?</h4>

                    <div>
                        @Html.EditorFor(modeld => modeld.bestellinggeplaatst, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(modeld => modeld.bestellinggeplaatst, "", new { @class = "text-danger" })
                    </div>
                
                    </div>
            </div>
           


            <div class="col-sm-6">
                        <h4 style="color: black">Waar wilt u uw boeket ophalen?</h4>
                        @Html.DropDownList("winkel")

                        <button type="submit" class="btn-success">Zoeken</button>
            </div>
        </div>
    }
